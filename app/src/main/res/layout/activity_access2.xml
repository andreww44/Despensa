<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessActivity">


    <TextView
        android:id="@+id/cardTextViewTitle"
        android:layout_width="358dp"
        android:layout_height="184dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"


        android:layout_marginEnd="54dp"
        android:gravity="center"
        android:text="Inicio de SesiÃ³n"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="347dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:text=""
        android:hint="Username"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardTextViewTitle" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="347dp"
        android:layout_height="68dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="108dp"
        android:text="Loggin"
        android:textColor="@color/colorNegro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="135dp"
        android:layout_height="73dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_splash_round" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="331dp"
        android:layout_height="23dp"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textColor="@color/colorRojo"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonsign"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="362dp"
        android:layout_height="69dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/colorNegro"
        android:text="Signup"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginButton"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>